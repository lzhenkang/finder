<div class="container">

<h1 class ="display-3" >Created Requests</h1>
		<% @request.each do |request| %>
				<div class="card" style="width: 18rem;">
				  <div class="card-body">
				    <h5 class="card-title"><%= request.description %></h5>
				    <p class="card-text">Location: <%= request.location %></p>
				    <p class="card-text">Accepted: <%= request.accepted %></p>
				    <button href="/requests/new" type="button" class="btn btn-primary btn-lg"><%= link_to 'View', "/requests/" + request.id.to_s %></button>
				  </div>
				</div>
		<%end%>
<h1 class ="display-3" >Created Appointments</h1>
		<% @appointment.each do |appointment| %>
				<div class="card" style="width: 18rem;">
				  <div class="card-body">
				    <h5 class="card-title"><%= appointment.time_slot %></h5>
				    <p class="card-text">Date: <%= appointment.date %></p>
				    <p class="card-text">Accepted: <%= appointment.accepted %></p>
				    <button href="/appointments/new" type="button" class="btn btn-primary btn-lg"><%= link_to 'View', "/appointments/" + appointment.id.to_s %></button>
				  </div>
				</div>
		<%end%>